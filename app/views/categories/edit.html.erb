<%= render "navbar" %>

<%= form_for @category, html: { class: "mx-2" } do |f| %>
  <div class="mb-3">
    <%= f.label :title, "名前" %>
    <%= f.text_field :title, class: "form-control", required: true, placeholder: "必須" %>
  </div>

  <button type="submit" class="btn btn-primary">更新</button>
  <a href="/categories/<%= @category.id %>" class="btn btn-secondary">戻る</a>
<% end %>